<!DOCTYPE html>
<html lang="en-IE">
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='\stylesheets\style.css' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  </head>
  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-transparent">
        <div class="container-fluid">
          <a class="navbar-brand" href="../arty-bake/">
            <img src="\images\main_icon.png" width="50" style="height: auto" alt="Main Icon">
          </a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/schedule">Schedule</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/project">Projects</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/employee">Employees</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/create-employee">Create Employee</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/create-project">Create Project</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/create-schedule">Add Assignment</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>
  </header>
  <div class="container-fluid">
    <div id="filtdiv">
      <div class="row">
        <form action="/project" method="get">
          <div class="col-lg-6 filcontainer1" style="float:left">
            <h4 class="shoph4">Days to Deadline</h4>
            <input type="range" name="deadValue" oninput="valueReaderDead(this.value)" min="0" max="600" value="600" class="slider" id="deadfil">
            <p>Days Until Project Deadline: <span id="deadfilval">0</span></p>
          </div>
          <script>
            function valueReaderDead(value) {
              document.getElementById("deadfilval").innerHTML = value;
            }
          </script>
          <div class="col-lg-6 filcontainer3" style="float:left">
            <b id="shown">Projects Displayed: <%= pshown %></b><br>
            <button type="submit" id="applybutton" action="/project" method="get">Apply Filters</button><br>
            <b id="filtout">Projects Filtered Out: <%= pfiltout %></b>
          </div>
        </form>
      </div>
    </div>
    <table id='project_table' width='100%' border='1' style='border-collapse: collapse;'>
      <tr>
        <th>Project ID</th>
        <th>Project Name</th>
        <th>Client Name</th>
        <th>Deadline</th>
      </tr>
      <% for (var i = 0; i < result.length; i++) { %>
       <tr>
         <td><%= result[i].projectID %></td>
         <td><%= result[i].projectName %></td>
         <td><%= result[i].clientName %></td>
         <td><%= result[i].projectDeadline %></td>
       </tr>
      <% } %>
    </table>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  </body>
</html>
