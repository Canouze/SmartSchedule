<!DOCTYPE html>
<html lang="en-IE">
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='\stylesheets\style.css' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  </head>
  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-transparent">
        <div class="container-fluid">
          <a class="navbar-brand" href="../arty-bake/">
            <img src="\images\main_icon.png" width="50" style="height: auto" alt="Main Icon">
          </a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="about/">Schedule</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="contact/">Projects</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/employee">Employees</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>
  </header>
  <div class="container-fluid">
    <div id="filtdiv">
      <div class="row">
        <form action="/employee" method="get">
          <div class="col-lg-4 filcontainer1" style="float:left">
            <h4 class="shoph4">Days with Company</h4>
            <input type="range" name="daysValue" oninput="valueReaderDays(this.value)" min="0" max="5000" value="0" class="slider" id="daysfil">
            <p>Minimum No. Days Employed: <span id="daysfilval">0</span></p>
          </div>
          <script>
            function valueReaderDays(value) {
              document.getElementById("daysfilval").innerHTML = value;
            }
          </script>
          <div class="col-lg-4 filcontainer1" style="float:left">
            <h4 class="shoph4">Employee Level</h4>
            <input type="range" name="levelValue" oninput="valueReaderLevel(this.value)" min="0" max="5" value="0" class="slider" id="levelfil">
            <p>Minimum Employee Level: <span id="levelfilval">0</span></p>
          </div>
          <script>
            function valueReaderLevel(value) {
              document.getElementById("levelfilval").innerHTML = value;
            }
          </script>
          <div class="col-lg-4 filcontainer3" style="float:left">
            <b id="shown"><%= shown %></b><br>
            <button type="submit" action="/employee" method="get">Apply Filters</button><br>
            <b id="filtout"><%= filtout %></b>
          </div>
        </form>
      </div>
    </div>
    <table id='employee_table' width='100%' border='1' style='border-collapse: collapse;'>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Start Date</th>
        <th>Level</th>
      </tr>
      <% for (var i = 0; i < result.length; i++) { %>
       <tr>
         <td><%= result[i].employeeID %></td>
         <td><%= result[i].employeeName %></td>
         <td><%= result[i].employeeStartDate %></td>
         <td><%= result[i].employeeLevel %></td>
       </tr>
      <% } %>
    </table>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  </body>
</html>
